# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/djangolms

# Redis Configuration (for Channels and Celery)
REDIS_HOST=localhost
REDIS_PORT=6379

# AI API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=claude-3-5-sonnet-20241022

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration
# For development, use console backend (prints emails to terminal)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production, use SMTP backend and configure settings below:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_USE_SSL=False
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password-or-app-password
DEFAULT_FROM_EMAIL=noreply@usiulms.edu
# SERVER_EMAIL=admin@usiulms.edu

# Site Configuration (used in emails and notifications)
SITE_NAME=USIU LMS
SITE_URL=http://localhost:8000

# Jitsi Configuration (for video conferencing and livestreaming)
# Using 8x8.vc to avoid authentication issues with meet.jit.si
# You can also use your own self-hosted Jitsi instance
JITSI_DOMAIN=8x8.vc
# JITSI_EXTERNAL_API_URL will be auto-generated from JITSI_DOMAIN
# Or you can specify a custom URL:
# JITSI_EXTERNAL_API_URL=https://your-jitsi-domain.com/external_api.js

# AWS S3 Configuration (optional, for production file storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
